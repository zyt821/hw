<script>
    let isConfirmEnabled = false;
    let beforeunloadHandler = null;
    
    const toggleBtn = document.getElementById('toggleBtn');
    const status = document.getElementById('status');
    const textarea = document.querySelector('textarea');
    
    // åˆ›å»ºbeforeunloadå¤„ç†å‡½æ•°
    function createBeforeunloadHandler() {
        return function(e) {
            // æ ‡å‡†æ–¹å¼
            e.preventDefault();
            
            // Chrome éœ€è¦è®¾ç½® returnValue
            e.returnValue = '';
            
            // ä¸€äº›æµè§ˆå™¨ä¼šæ˜¾ç¤ºè¿™ä¸ªæ¶ˆæ¯ï¼ˆä½†ç°ä»£æµè§ˆå™¨é€šå¸¸æ˜¾ç¤ºé»˜è®¤æ¶ˆæ¯ï¼‰
            return 'æ‚¨ç¡®å®šè¦ç¦»å¼€æ­¤é¡µé¢å—ï¼Ÿæ‚¨è¾“å…¥çš„æ•°æ®å¯èƒ½ä¸ä¼šè¢«ä¿å­˜ã€‚';
        };
    }
    
    // å¯ç”¨ç¦»å¼€ç¡®è®¤
    function enableConfirm() {
        if (!beforeunloadHandler) {
            beforeunloadHandler = createBeforeunloadHandler();
        }
        
        window.addEventListener('beforeunload', beforeunloadHandler);
        
        isConfirmEnabled = true;
        toggleBtn.textContent = 'ç¦ç”¨ç¦»å¼€ç¡®è®¤';
        toggleBtn.classList.add('disabled');
        status.textContent = 'âœ… ç¦»å¼€ç¡®è®¤å·²å¯ç”¨ - ç°åœ¨å°è¯•å…³é—­æ ‡ç­¾é¡µæˆ–åˆ·æ–°é¡µé¢';
        status.className = 'status enabled';
    }
    
    // ç¦ç”¨ç¦»å¼€ç¡®è®¤
    function disableConfirm() {
        if (beforeunloadHandler) {
            window.removeEventListener('beforeunload', beforeunloadHandler);
        }
        
        isConfirmEnabled = false;
        toggleBtn.textContent = 'å¯ç”¨ç¦»å¼€ç¡®è®¤';
        toggleBtn.classList.remove('disabled');
        status.textContent = 'âŒ ç¦»å¼€ç¡®è®¤å·²ç¦ç”¨';
        status.className = 'status disabled';
    }
    
    // åˆ‡æ¢ç¡®è®¤çŠ¶æ€
    toggleBtn.addEventListener('click', function() {
        if (isConfirmEnabled) {
            disableConfirm();
        } else {
            enableConfirm();
        }
    });
    
    // å½“ç”¨æˆ·å¼€å§‹è¾“å…¥æ—¶è‡ªåŠ¨å¯ç”¨ç¡®è®¤
    textarea.addEventListener('input', function() {
        if (this.value.length > 0 && !isConfirmEnabled) {
            enableConfirm();
            // æ˜¾ç¤ºæç¤º
            const hint = document.createElement('div');
            hint.textContent = 'ğŸ’¡ æ£€æµ‹åˆ°è¾“å…¥å†…å®¹ï¼Œå·²è‡ªåŠ¨å¯ç”¨ç¦»å¼€ç¡®è®¤ä¿æŠ¤';
            hint.style.cssText = `
                background: rgba(76, 175, 80, 0.2);
                border: 2px solid #4CAF50;
                padding: 10px;
                border-radius: 8px;
                margin: 10px 0;
                text-align: center;
                animation: fadeInOut 3s ease-in-out;
            `;
            this.parentNode.insertBefore(hint, this.nextSibling);
            
            // 3ç§’åç§»é™¤æç¤º
            setTimeout(() => {
                if (hint.parentNode) {
                    hint.parentNode.removeChild(hint);
                }
            }, 3000);
        }
    });
    
    // æ·»åŠ CSSåŠ¨ç”»
    const style = document.createElement('style');
    style.textContent = `
        @keyframes fadeInOut {
            0% { opacity: 0; transform: translateY(-10px); }
            20% { opacity: 1; transform: translateY(0); }
            80% { opacity: 1; transform: translateY(0); }
            100% { opacity: 0; transform: translateY(-10px); }
        }
    `;
    document.head.appendChild(style);
